#include <iostream>
#include <string>
#include <cmath>
using namespace std;

bool isVokal(char c) {
    // cek vokal kecil & besar
    return c == 'a' || c == 'i' || c == 'u' || c == 'e' || c == 'o' ||
           c == 'A' || c == 'I' || c == 'U' || c == 'E' || c == 'O';
}

int main() {
    string kata_sandi, kode_sandi;
	char hurufPertama;
    string noVokal = "", reverseKode = "";

    cout << "Masukkan kata sandi : ";
    cin >> kata_sandi;
    
    hurufPertama = kata_sandi[0];
    int kodeASCII = int(hurufPertama);
    
    // menghapus huruf vokal
    for (int i = 0; i < kata_sandi.length(); i++) {
        if (!isVokal(kata_sandi[i])) {
            noVokal += kata_sandi[i];
        }
    }

    // reverse kode sandi
    for (int i = noVokal.length() - 1; i >= 0; i--) {
        reverseKode += noVokal[i];
    }
    
    // memasukkan kode ASCII di tengah kata
    double mid = ceil(reverseKode.size() / 2.0); //hasilnya bulat ke atas
    kode_sandi = reverseKode.substr (0, mid) + to_string(kodeASCII) + reverseKode.substr(mid);
    
    cout << kode_sandi << endl;
}
